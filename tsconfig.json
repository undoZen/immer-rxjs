{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false
  }
}
